<UserControl x:Class="GithubWpf.UCReglages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GithubWpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

            <TextBlock Text="RÉGLAGES AUDIO" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Label Content="Volume Général (Master)" Foreground="White" FontSize="16"/>
            <Slider x:Name="sliderMaster" Minimum="0" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,20"/>

            <Label Content="Musique" Foreground="White" FontSize="16"/>
            <Slider x:Name="sliderMusic" Minimum="0" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,20"/>

            <Label Content="Effets Sonores (Tirs, Explosions)" Foreground="White" FontSize="16"/>
            <Slider x:Name="sliderSFX" Minimum="0" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,30"/>

        </StackPanel>

        <Button x:Name="butRetourReglages" Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="220" Height="80" Margin="20,0,0,20">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgRetour.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
