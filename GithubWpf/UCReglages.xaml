<UserControl x:Class="GithubWpf.UCReglages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GithubWpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="sliderSon" Width="400" Minimum="1"
             Maximum="10"
             Value="5"
             TickFrequency="1"
             IsSnapToTickEnabled="True"
             TickPlacement="BottomRight"
             AutoToolTipPlacement="BottomRight"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"/>


        <Button x:Name="butRetourReglages" Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="220" Height="80" Margin="20,0,0,20">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgRetour.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
