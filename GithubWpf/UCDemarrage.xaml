<UserControl x:Class="GithubWpf.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GithubWpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800"
             Background="Transparent">
    <Grid Background="Transparent">

        <Button x:Name="butJouer" Content="" Width="245" Height="80" Foreground="White" FontWeight="Bold" BorderBrush="#00707070" Margin="250,0,250,0" FontSize="22">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgJouer.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="butProfil" Content="" Width="245" Height="80" Foreground="White" FontWeight="Bold" BorderBrush="#00707070" Margin="250,250,250,0" FontSize="22">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgProfil.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="butBoutique" Content="" Width="245" Height="80" Foreground="White" FontWeight="Bold" FontSize="22" Margin="250,500,250,0" BorderBrush="#00707070">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgBoutique.png"/>
            </Button.Background>
        </Button>

        <Button x:Name="butReglages" Content="" Width="245" Height="80" Foreground="White" FontWeight="Bold" FontSize="22" Margin="250,750,250,0" BorderBrush="#00707070">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgReglage.png"/>
            </Button.Background>
        </Button>

        <Image x:Name="imgLogo" Margin="62,22,62,610" Source="/Images/Logo1.png" Stretch="Fill"/>
        
        <Button x:Name="butReglesJeu" Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" Width="80" Height="80">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Bouton/imgRegle.png"/>
            </Button.Background>
        </Button>


    </Grid>
</UserControl>