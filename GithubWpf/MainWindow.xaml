<Window x:Class="GithubWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GithubWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800" ResizeMode="NoResize">
    <Grid>
        <!-- Fond animé -->
        <Canvas x:Name="canvasJeu">
            <Image x:Name="imgFond1" Height="984" Source="/Images/background1.png" Stretch="Fill" Width="800" Canvas.Top="0"/>
            <Image x:Name="imgFond2" Height="984" Source="/Images/background1.png" Stretch="Fill" Width="800" Canvas.Top="984"/>
        </Canvas>

        <!-- Zone qui accueillera les UserControl (au-dessus du Canvas) -->
        <ContentControl x:Name="ZoneJeu" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
